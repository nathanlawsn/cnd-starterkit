{#
/**
 * @file
 * Default theme implementation for a three column layout.
 *
 * This template provides a three column 25%-50%-25% display layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 */
#}
{%
  set classes = [
    'layout',
    'layout--threecol-25-50-25',
  ]
%}
{% if content %}
  <div{{ attributes.addClass(classes) }}>
    <div class="container">

      {% if data.section_name %}
        <h2 class="section-name">{{ data.section_name }}</h2>
      {% endif %}

      <div class="row">

      {% if content.header %}
        <div {{ region_attributes.header.addClass('layout__region', 'layout__region--header', 'col-12') }}>
          {{ content.header }}
        </div>
      {% endif %}

      {% if content.first %}
        <div {{ region_attributes.first.addClass('layout__region', 'layout__region--first', 'col-lg-3') }}>
          {{ content.first }}
        </div>
      {% endif %}

      {% if content.second %}
        <div {{ region_attributes.second.addClass('layout__region', 'layout__region--second', 'col-lg-6') }}>
          {{ content.second }}
        </div>
      {% endif %}

      {% if content.third %}
        <div {{ region_attributes.third.addClass('layout__region', 'layout__region--third', 'col-lg-3') }}>
          {{ content.third }}
        </div>
      {% endif %}

      {% if content.footer %}
        <div {{ region_attributes.footer.addClass('layout__region', 'layout__region--footer', 'col-12') }}>
          {{ content.footer }}
        </div>
      {% endif %}

      </div>
    </div>
  </div>
{% endif %}
