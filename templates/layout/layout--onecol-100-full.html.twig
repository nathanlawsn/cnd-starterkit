{#
/**
 * @file
 * Default theme implementation to display a full width one-column layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 */
#}
{%
  set classes = [
    'layout',
    'layout--onecol-full',
  ]
%}
{% if content %}
<div{{ attributes.addClass(classes) }}>
  <div class="container-fluid">

    {% if data.section_name %}
      <h2 class="section-name">{{ data.section_name }}</h2>
    {% endif %}

    <div class="row">

      {% if content.content %}
        <div {{ region_attributes.content.addClass('layout__region', 'layout__region--content', 'col-12') }}>
          {{ content.content }}
        </div>
      {% endif %}

    </div>
  </div>
</div>
{% endif %}
